{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "removeComments": false,
      "preserveConstEnums": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "noImplicitAny": true,
      "allowSyntheticDefaultImports": true,
      "outDir": "./dist/",
      "strictNullChecks": true,
      "sourceMap": true,
      "baseUrl": ".",
      "rootDir": ".",
      "jsx": "react",
      "allowJs": true,
      "resolveJsonModule": true,
      "typeRoots": [
        "node_modules/@types",
        "global.d.ts"
      ],
      "paths": {
        "@/*": ["./src/*"],
        "@types/react": ["node_modules/@types/react"]
      }
    },      
    "exclude": [
      "node_modules",
      "dist"
    ],
    "compileOnSave": false
}