{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "allowSyntheticDefaultImports": true,
      "outDir": "./dist/",
      "sourceMap": true,
      "baseUrl": ".",
      "allowJs": true,
      "strict": true,
      "moduleResolution": "node",
      "typeRoots": [
        "node_modules/@types",
        "global.d.ts"
      ],
      "paths": {
        "@/*": ["./src/*"],
      }
    },      
    "exclude": [
      "node_modules",
      "dist"
    ]
}
  