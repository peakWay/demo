{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "allowSyntheticDefaultImports": true,
      "outDir": "./dist/",
      "sourceMap": true,
      "baseUrl": ".",
      "jsx": "react",
      "allowJs": true,
      "typeRoots": [
        "node_modules/@types",
        "global.d.ts"
      ],
      "paths": {
        "@/*": ["./src/*"],
        "@types/react": ["node_modules/@types/react"]
      }
    },      
    "exclude": [
      "node_modules",
      "dist"
    ]
}
  